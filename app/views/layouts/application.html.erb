<!DOCTYPE html>
<html>
  <head>
    <title>AstroturfReservation</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= root_path %>">Akşama Maç Var</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="<%= astroturves_path %>">Halısahalar</a></li>
            <li><a href="<%= reservations_path %>">Rezervasyonlarım</a></li>
            <li><a href="<%= reservations_path %>">Yardım</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Giriş Yap <span class="caret"></span></a>
              <ul class="dropdown-menu">
              <% if current_user.present? %>
                <li><%= link_to current_user.email, root_path %></li>
                <li><%= link_to 'olarak giriş yapıldı', root_path %></li>
                <hr>
                <li><%= link_to 'Çıkış Yap', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Giriş yap', new_user_session_path %></li>
                <li><%= link_to 'Kaydol', new_user_registration_path %></li>
              <% end %>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, class: 'alert alert-'+name %>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
